#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/outputs.h>

#define DEFAULT  0
#define RAISE    1
#define LOWER    2
#define BOTH     3

// -----------------------------------
// | TAB:TAB |    |    |    |    |   -:-  =:=  <:<   |   (< = bksp)
// | ESC:ESC |    |    |    |    |    |   #:#   |
// |    |    |    |    |    |    |    |    |
//           |    |    |         |    |    |

/ {
    combos {
        compatible = "zmk,combos";

        combo_tab {
            timeout-ms = <50>;
            key-positions = <0 1>;
            bindings = <&kp TAB>;
        };

        combo_esc {
            timeout-ms = <50>;
            key-positions = <10 11>;
            bindings = <&kp ESC>;
        };

        combo_dash {
            timeout-ms = <50>;
            key-positions = <6 7>;
            bindings = <&kp MINUS>;
        };

        combo_eq {
            timeout-ms = <50>;
            key-positions = <7 8>;
            bindings = <&kp EQUAL>;
        };

        combo_bksp {
            timeout-ms = <50>;
            key-positions = <8 9>;
            bindings = <&kp BSPC>;
        };

        combo_hash {
            timeout-ms = <50>;
            key-positions = <17 18>;
            bindings = <&kp NON_US_HASH>;
        };

    };
};

&mt {
    tapping-term-ms = <400>;
};

/ {

    behaviors {
        td0: tap_dance_0 {
            compatible = "zmk,behavior-tap-dance";
            label = "TAP_DANCE_0";
            #binding-cells = <0>;
            tapping-term-ms = <200>;
            bindings = <&kp LCTRL>, <&kp LSHIFT>;
        };
        tdr: tap_dance_reset {
            compatible = "zmk,behavior-tap-dance";
            label = "TAP_DANCE_RESET";
            #binding-cells = <0>;
            tapping-term-ms = <200>;
            bindings = <&kp R>, <&kp R>, <&kp R>, <&kp R>, <&sys_reset R>;
        };
        tdb: tap_dance_bootloader {
            compatible = "zmk,behavior-tap-dance";
            label = "TAP_DANCE_BOOTLOADER";
            #binding-cells = <0>;
            tapping-term-ms = <200>;
            bindings = <&kp B>, <&kp B>, <&kp B>, <&kp B>, <&bootloader B>;
        };                
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            bindings = <
    &kp Q      &kp W       &kp E      &tdr           &kp T      &kp Y     &kp U   &kp I     &kp O     &kp P
    &kp A      &kp S       &kp D      &kp F           &kp G      &kp H     &kp J   &kp K     &kp L
    &kp Z      &kp X       &kp C      &kp V           &tdb      &kp N     &kp M   &kp DOT
    &td0 &mo LOWER   &kp SPACE  &lt RAISE ENTER &kp ENTER
            >;
        };

        raise_layer {
            bindings = <
    &kp TAB    &trans    &trans     &trans     &trans     &trans  &trans    &trans    &trans    &kp BSPC
    &kp ESC    &trans    &trans     &kp F5     &trans     &trans  &kp F12   &trans    &kp SEMI
    &trans     &trans    &trans     &kp PG_UP  &kp PG_DN  &trans  &trans    &kp FSLH
    &kp LCTRL  &mo BOTH  &kp HOME   &mo BOTH   &trans
            >;
        };

        lower_layer {
            bindings = <
    &kp N1          &kp N2    &kp N3   &kp N4     &kp N5     &kp N6    &kp N7    &kp N8    &kp N9    &kp N0
    &kp CAPS        &trans    &trans   &trans     &trans     &kp LEFT  &kp DOWN  &kp UP    &kp RIGHT
    &kp NON_US_BSLH &trans    &trans   &kp PG_UP  &kp PG_DN  &trans    &trans    &kp COMMA
    &kp LGUI        &mo BOTH  &kp END  &mo BOTH   &trans
            >;
        };

        both_layer {
            bindings = <
    &bt BT_CLR   &bt BT_SEL 0 &bt BT_SEL 1 &bt BT_SEL 2 &trans  &trans  &trans  &trans &trans &kp DEL
    &trans       &trans       &trans       &trans       &trans  &trans  &trans  &trans &kp AT
    &trans       &trans       &trans       &trans       &trans  &trans  &trans  &trans
    &out OUT_USB &trans       &out OUT_TOG &trans       &out OUT_BLE
            >;
        };

    };
};
